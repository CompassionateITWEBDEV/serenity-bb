{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen",
          "layer",
          "-webkit-keyframes",
          "-moz-keyframes",
          "-o-keyframes"
        ]
      }
    ],
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": ["theme", "screen", "style"]
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "-webkit-text-size-adjust",
          "-moz-border-radius",
          "-moz-box-shadow",
          "-webkit-appearance",
          "-webkit-tap-highlight-color"
        ]
      }
    ],
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "-moz-focus-inner",
          "global"
        ]
      }
    ],
    "selector-pseudo-element-no-unknown": [
      true,
      {
        "ignorePseudoElements": [
          "-webkit-scrollbar",
          "-webkit-scrollbar-thumb",
          "-webkit-scrollbar-track"
        ]
      }
    ]
  }
}
